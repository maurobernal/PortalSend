
@{
    ViewBag.Title = "Index";
}



<section id="Index" class="about">
    <div class="container">
        <div class="row">
            <h2>Lotes cargados</h2>
        </div>
        <div class="row">
            <div class="col">
                <label>Fecha desde:</label> <input id="DTP_FechaDesde" title="Fecha desde" style="width: 100%" />
            </div>
            <div class="col">
                <label> Fecha hasta:</label> <input id="DTP_FechaHasta" title="Fecha hasta" style="width: 100%" />
            </div>
        </div>
        <div class="row">
            <div class="col p-2">
                <button id="Btn_Cargar" type="button" class="btn btn-info">Cargar lotes</button>
            </div>
        </div>
        <div class="row">
            <button id="Btn_Ver" type="button" class="btn btn-info">Ver</button>
            <button id="Btn_Eliminar" type="button" class="btn btn-danger">Eliminar</button>
            <div id="Pager_Lotes" class="k-pager-wrap"></div>
        </div>
        <div class="row">
            <div id="List_Lotes"></div>
        </div>

    </div>
</section>



<script>
    $(document).ready(function () {
        // Inicializo
        $("#DTP_FechaDesde").kendoDatePicker();
        $("#DTP_FechaHasta").kendoDatePicker();
        //$("#Btn_Cargar").kendoButton({ click: CargarLotes, spriteCssClass: "btn-info" });
        //$("#Btn_Ver").kendoButton({ click: VerLotes });
        //$("#Btn_Eliminar").kendoButton({ click: EliminarLotes});
        $("#Btn_Cargar").click(function () {CargarLotes()});
        var date = new Date();


        $("#DTP_FechaDesde").data("kendoDatePicker").value(new Date(date.getFullYear(), date.getMonth(), 1));
        $("#DTP_FechaHasta").data("kendoDatePicker").value(new Date(date.getFullYear(), date.getMonth() + 1, 0));

         var Ruta = '@Url.Action("ListarLotes", "Lotes")';
        dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: Ruta,
                    dataType: "json"
                },
                update: {
                    url: Ruta + "/Products/Update",
                    dataType: "jsonp"
                },
                destroy: {
                    url: Ruta + "/Products/Destroy",
                    dataType: "jsonp"
                },
                create: {
                    url: Ruta + "/Products/Create",
                    dataType: "jsonp"
                }
            },

             schema: {
                model: {
                    id: "Lote",
                    fields: {
                        Cant: "Cant",
                    }
                }
            }
        });
        dataSource.fetch(function () {
            console.log(dataSource.view().length); // displays "77"
        });

        $("#List_Lotes").kendoListView({
            remove: function (e) {
                if (!confirm("Do you want to delete " + e.model.get("ProductName") + "?")) {
                    e.preventDefault();
                }
            },
            dataSource: dataSource,
            selectable: "single",
            template: kendo.template($("#template").html())
        });


    });



    function CargarLotes() {
        var Ruta = '@Url.Action("ListarLotes", "Lotes")';
        //borro lo que ya tiene
        $("#Pager_Lotes").kendoPager({dataSource: null});
        $("#List_Lotes").kendoListView({ dataSource: null });


        $.ajax({
            url: Ruta,
            datatype: "json",
            type: "post",
            data: {
                Fecha_Desde: $('#DTP_FechaDesde').val(),
                Fecha_Hasta: $('#DTP_FechaHasta').val(),
            },

           success: function (data) {
                if (data) {

                  //  var data2 = JSON.parse(data);
                    var dataSource = new kendo.data.DataSource({
                        data: data,
                        pageSize: 10
                    });
                    dataSource.fetch(function () {
                        console.log(dataSource.view().length); // displays "77"
                    });
                    $("#Pager_Lotes").kendoPager({
                        dataSource: dataSource
                    });

                    $("#List_Lotes").kendoListView({
                        dataSource: dataSource,
                        selectable: "single",
                        template: kendo.template($("#template").html()),
                        remove: function (e) {
                            if (!confirm("Quieres eliminar " + e.model.get("Lote") + "?")) {
                                e.preventDefault();
                            }
                        }
                    });





                }
            },

            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Status: " + textStatus + " Error: " + errorThrown + " URL" + Ruta);
            }
        });





    };
